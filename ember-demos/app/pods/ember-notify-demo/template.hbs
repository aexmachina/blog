<form class='row'>
  <div class='column'>
    <fieldset>
      <legend>ember-notify demo</legend>
      <div class='message'>
        <label>Message</label>
        {{input value=message name='message'}}
      </div>
      <div class='level'>
        <button {{action 'info'}}>info</button>
        <button {{action 'success'}}>success</button>
        <button {{action 'warning'}}>warning</button>
        <button {{action 'alert'}}>alert</button>
      </div>
      <div class='settings'>
        <div class='close-after'>
          <label>Close after (empty to disable)</label>
          {{input value=closeAfter name='closeAfter'}}
        </div>
        <div class='type'>
          <label>{{input type='checkbox' name='raw' checked=raw}} Unescaped HTML</label>
        </div>
      </div>
    </fieldset>
  </div>
</form>
